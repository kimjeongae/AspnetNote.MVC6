@model AspnetNote.MVC6.ViewModel.LoginViewModel

<h2>Login</h2>

<form class="form-horizontal" method="post" asp-controller="Account" asp-action="Login">
    <div class="text-danger" asp-validation-summary="ModelOnly"></div>

    <div class="form-group">
        <label>User ID</label>
        <input type="text" class="form-control" asp-for="UserId" placeholder="User ID Enter" />
        <span class="text-danger" asp-validation-for="UserId"></span>
    </div>

    <div class="form-group">
        <label>User Password</label>
        <input type="password" class="form-control" asp-for="UserPassword" placeholder="User Password Enter" />
        <span class="text-danger" asp-validation-for="UserPassword"></span>
    </div>

    <div class="form-group">
        <input type="submit" class="btn btn-primary" value="Login" title="Login" />
    </div>

</form>