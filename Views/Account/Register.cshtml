@model AspnetNote.MVC6.Models.User
<h2>Register</h2>

<form class="form-horizontal" method="post" asp-controller="Account" asp-action="Register">
    <div class="form-group">
        <label>User ID</label>
        <input type="text" class="form-control" asp-for="UserId" placeholder="User ID Enter" />
        <span class="text-danger" asp-validation-for="UserId"></span>
    </div>

    <div class="form-group">
        <label>User Password</label>
        <input type="password" class="form-control" asp-for="UserPassword" placeholder="User Password Enter" />
        <span class="text-danger" asp-validation-for="UserPassword"></span>
    </div>

    <div class="form-group">
        <label>User Name</label>
        <input type="text" class="form-control" asp-for="UserName" placeholder="User Name Enter" />
        <span class="text-danger" asp-validation-for="UserName"></span>
    </div>

    <div class="form-group">        
        <input type="submit" class="btn btn-primary" value="Register" title="Register" />
        <a class="btn btn-warning" href="#">Cancel</a>
    </div>

</form>