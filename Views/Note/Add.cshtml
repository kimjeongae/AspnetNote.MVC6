@model AspnetNote.MVC6.Models.Note

<div class="row">
    <div class="col-lg-2"></div>
    <div class="col-lg-8">
        <form class="form-horizontal" method="post" asp-controller="Note" asp-action="Add">
            <div class="text-danger" asp-validation-summary="ModelOnly"></div>

            <div class="form-group">
                <label>Title</label>
                <input type="text" class="form-control" asp-for="NoteTitle" placeholder="Title Enter" />
                <span class="text-danger" asp-validation-for="NoteTitle"></span>
            </div>

            <div class="form-group">
                <label>Content</label>
                <textarea class="form-control editor" rows="20" asp-for="NoteContent" placeholder="Content Enter" ></textarea>
                <span class="text-danger" asp-validation-for="NoteContent"></span>
            </div>

            <div class="form-group">
                <input type="submit" class="btn btn-primary" value="Save" title="Save" />
                <a class="btn btn-default" asp-controller="Note" asp-action="Index">Cancel</a>
            </div>
        </form>
    </div>
    <div class="col-lg-2"></div>
</div>
